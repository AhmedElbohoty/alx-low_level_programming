# Usage:
# make	# compile all files
# make clean	# deletes all Emacs and Vim temporary files along with the executable

CC = gcc	# the compiler to be used.

SRC = main.c school.c	# the .c files.

OBJ = ${SRC:.c=.o}	# the .o files.

NAME = school

RM = rm -f

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all
